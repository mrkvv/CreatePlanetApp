<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    tools:context="OrdersAdapter">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/item_in_list_catalog_imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:background="?attr/selectableItemBackground"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/item_in_list_catalog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kazimir_text_semibold"
                    android:paddingHorizontal="20dp"
                    android:text="TextView"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_in_list_catalog_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kazimir_text_regular"
                    android:paddingHorizontal="20dp"
                    android:text="TextView"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_in_list_catalog_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kazimir_text_regular"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="10dp"
                    android:text="TextView"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/item_in_list_catalogStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_heart_item"
                android:clickable="true"
                android:contentDescription="Добавить/Удалить в избранное"
                android:focusable="true"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/heart_full_blue" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
